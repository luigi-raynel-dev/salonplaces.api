SMTP_HOST="localhost"
SMTP_PORT="1025"
SMTP_IGNORE_TLS="true"
SMTP_AUTH_USER="noreply@salonplaces.com"
SMTP_AUTH_PASS="YUOR-PASSWORD"

# Booking config
INTERVAL_TIME=10